<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <com.example.lawre.week6day3.CustomRectangle
        android:id="@+id/custRectangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.example.lawre.week6day3.CustomCompound
        android:id="@+id/customCompound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"/>

    <com.example.lawre.week6day3.CustomEditText
        android:id="@+id/cetColorChangeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Input text"/>

    <Button
        android:id="@+id/btAnimate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Animate"
        android:onClick="onClick"/>

</LinearLayout>